{
  "fmt": {
    "include": [
      "."
    ],
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "imports": {
    "@nostr-dev-kit/ndk": "npm:@nostr-dev-kit/ndk@^2.10.7",
    "chalk": "npm:chalk@5.3.0",
    "date-fns": "npm:date-fns@4.1.0",
    "meilisearch": "npm:meilisearch@^0.46.0"
  },
  "lint": {
    "include": [
      "."
    ],
    "rules": {
      "exclude": [
        "no-explicit-any"
      ],
      "tags": [
        "recommended"
      ]
    }
  },
  "tasks": {
    "dev": "deno run --env --allow-env --allow-net --allow-read --allow-write --watch src/app.ts",
    "start": "deno run --env --allow-env --allow-net --allow-read --allow-write src/app.ts"
  }
}
